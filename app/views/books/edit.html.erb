<!DOCTYPE html>

<html>

  <head>
    <title>edit</title>
    <meta charset="UTF-8">
  </head>

  <body>

    <div>
      <%= flash[:notice] %>
    </div>
    
        <h1>Editing Book</h1>
        
    <% if @book.errors.any? %>
      <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
      <div>
          <h4>Title</h4>
          <%= f.text_field :title %>
      </div>
      
      <div>
          <h4>Body</h4>
          <%= f.text_area :body %>
      </div>
          <%= f.submit 'Update Book' %>
    <% end %>


      <table>
    <tr>
        <td>
          <%= link_to "Show", book_path(@book.id) %>
        </td>
        <td>|</td>
        <td>
          <%= link_to "Back", books_path %>
        </td>
    </tr>
  </table>


  </body>

</html>